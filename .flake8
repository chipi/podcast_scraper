[flake8]
max-line-length = 100
max-complexity = 25
extend-ignore = E203,W503,E402
exclude =
    build,
    dist,
    docs,
    __pycache__,
    .venv,
per-file-ignores =
    __init__.py:F401
    config.py:C901
    episode_processor.py:C901
    workflow.py:C901
    speaker_detection.py:C901
    whisper_integration.py:C901
    tests/integration/*:E501
    scripts/dashboard/*:E501
    *summarizer.py:C901
    *metadata_generation.py:C901
    *orchestration.py:C901
    *processing.py:C901
    *conftest.py:C901
    *run_index.py:C901
    *rescore_baseline.py:C901
    scripts/acceptance/generate_performance_benchmark.py:C901
